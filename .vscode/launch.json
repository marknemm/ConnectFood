{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server Admin Attach",
      "type": "node",
      "request": "attach",
      "port": 9230,
      "cwd": "${workspaceRoot}",
      "restart": true,
      "trace": true,
      "sourceMaps": true,
      "localRoot": "${workspaceRoot}/server/admin-dist",
      "remoteRoot": "/usr/src/foodweb/server/admin-dist"
    },
    {
      "name": "Server Web Attach",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "cwd": "${workspaceRoot}",
      "restart": true,
      "trace": true,
      "sourceMaps": true,
      "localRoot": "${workspaceRoot}/server/dist",
      "remoteRoot": "/usr/src/foodweb/server/dist"
    },
    {
      "name": "Client Admin Attach",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "urlFilter": "http://localhost:4201/*",
      "webRoot": "${workspaceRoot}\\client",
      "trace": true,
      "sourceMaps": true
    },
    {
      "name": "Client Web Attach",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "urlFilter": "http://localhost:4200/*",
      "webRoot": "${workspaceRoot}\\client",
      "trace": true,
      "sourceMaps": true
    },
    {
      "name": "Server Test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}\\server\\dist\\**\\*.js"
      ],
      "localRoot": "${workspaceRoot}/server/dist",
      "remoteRoot": "/usr/src/foodweb/server/dist",
      "stopOnEntry": false,
      "args": [
        "--no-timeouts",
        "--colors",
        "--debug-brk",
        "${workspaceRoot}/server/dist/server/test/**/test-*.js"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "env": {
        "NODE_ENV": "testing"
      }
    },
    {
      "name": "Shared Test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}\\shared\\dist\\**\\*.js"
      ],
      "stopOnEntry": false,
      "args": [
        "--no-timeouts",
        "--colors",
        "--debug-brk",
        "${workspaceRoot}/shared/dist/test/**/test-*.js"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "env": {
        "NODE_ENV": "testing"
      }
    },
    {
      "name": "Python",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "pythonPath": "c:/python27/python.exe"
    },

    {
      "name": "Launch on Android",
      "type": "nativescript",
      "request": "launch",
      "platform": "android",
      "appRoot": "${workspaceRoot}/client",
      "sourceMaps": true,
      "watch": true
    },
    {
      "name": "Launch on iOS",
      "type": "nativescript",
      "request": "launch",
      "platform": "ios",
      "appRoot": "${workspaceRoot}/client",
      "sourceMaps": true,
      "watch": true
    },
    {
      "name": "Attach on Android",
      "type": "nativescript",
      "request": "attach",
      "platform": "android",
      "appRoot": "${workspaceRoot}/client",
      "sourceMaps": true,
      "watch": false
    },
    {
      "name": "Attach on iOS",
      "type": "nativescript",
      "request": "attach",
      "platform": "ios",
      "appRoot": "${workspaceRoot}/client",
      "sourceMaps": true,
      "watch": false
    }
  ],
  "compounds": [
    {
      "name": "Hybrid Attach",
      "configurations": [
        "Server Web Attach",
        "Client Web Attach"
      ]
    },
    {
      "name": "Hybrid Admin Attach",
      "configurations": [
        "Server Admin Attach",
        "Client Admin Attach"
      ]
    }
  ]
}
