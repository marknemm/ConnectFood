<?xml version='1.0' encoding='utf-8'?>
<widget id="com.wnyfoodweb.foodweb" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>FoodWeb</name>
    <description>
        Our mission is to help alleviate hunger and prevent the waste of food.
        With our proprietary platform and our network of volunteers, we will enable local businesses to easily and quickly donate their excess food to local charities.
    </description>
    <author email="foodweb.manager@gmail.com" href="https://www.wnyfoodweb.com">
        FoodWeb Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:usesCleartextTraffic="true" />
        </edit-config>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
