{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es2015",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "lib": [
      "es2018",
      "es2017",
      "dom",
      "es6"
    ],
    "baseUrl": "./",
    "paths": {
      "~app/*": ["./src/app/*"],
      "~shared": ["../web/src/shared"],
      "~web/*": ["../web/src/app/*"]
    }
  },
  "include": [
    "./references.d.ts",
    "../web/src/app/types/missing-types.d.ts",
    "../web/src/app/types/food-web-environment.d.ts"
  ],
  "files": [
    "./src/main.ts"
  ],
  "exclude": [
    "node_modules",
    "platforms",
    "e2e"
  ]
}
