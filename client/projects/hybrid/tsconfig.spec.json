{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/spec",
    "paths": {
      "~hybrid/*": ["src/app/*"],
      "~hybrid-env/*": ["src/environments/*"],
      "~lodash-mixins": ["../web/src/lodash-mixins"],
      "~shared": ["src/shared"],
      "~web/*": ["../web/src/app/*"],
      "~web-env/*": ["../web/src/environments/*"]
    },
    "strict": false,
    "types": [
      "googlemaps",
      "jasmine",
      "node"
    ]
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "../web/src/**/*.d.ts"
  ]
}
