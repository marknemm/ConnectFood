{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "~admin/*": ["src/app/*"],
      "~shared": ["src/shared"],
      "~web/*": ["../web/src/app/*"]
    },
    "sourceMap": true,
    "types": [
      "googlemaps",
      "node"
    ]
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts",
    "../web/src/**/*.d.ts"
  ]
}
