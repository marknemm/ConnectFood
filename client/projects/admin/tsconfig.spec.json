{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/spec",
    "paths": {
      "~admin/*": ["src/app/*"],
      "~shared": ["src/shared"],
      "~web/*": ["../web/src/app/*"]
    },
    "strict": false,
    "types": [
      "jasmine",
      "node"
    ]
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "../web/src/**/*.d.ts"
  ]
}
