{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "paths": {
      "~lodash-mixins": ["src/lodash-mixins"],
      "~shared": ["src/shared"],
      "~web/*": ["src/app/*"],
      "~web-env/*": ["src/environments/*"]
    },
    "strict": false,
    "types": [
      "googlemaps",
      "jasmine",
      "node"
    ]
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
