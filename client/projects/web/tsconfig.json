{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "../../dist/out-tsc",
    "paths": {
      "~lodash-mixins": ["src/lodash-mixins"],
      "~shared": ["src/shared"],
      "~web/*": ["src/app/*"],
      "~web-env/*": ["src/environments/*"]
    },
    "sourceMap": true
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts",
    "src/environments/*.ts"
  ]
}
