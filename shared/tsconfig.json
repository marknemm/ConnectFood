{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "rootDir": "./src",
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true
  }
}
