{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "lib": [
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "paths": {
      "~admin/*": ["./projects/admin/src/*"],
      "~entity/*": ["database/src/entity/*"],
      "~jobs/*": ["./jobs/*"],
      "~migration/*": ["database/src/migration/*"],
      "~orm/*": ["./database/src/orm/*"],
      "~shared": ["./shared"],
      "~web/*": ["./projects/web/src/*"]
    },
    "resolveJsonModule": true,
    "rootDirs": [
      "./database/src/",
      "./projects/web/src/",
      "./projects/admin/src/",
      "../shared/src/"
    ],
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ]
  }
}