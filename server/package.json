{
  "name": "food-web-server",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/server/src/index.js",
  "scripts": {
    "build": "tsc -p ./src/tsconfig.app.json && npm run inline-css",
    "build:watch": "tsc-watch -p ./src/tsconfig.app.json",
    "build:e2e": "npm run build:watch",
    "clean": "rimraf ./dist ./coverage ./ormlogs.log",
    "clean:all": "npm run clean && rimraf ./node_modules",
    "debug": "tsc-watch -p ./src/tsconfig.app.json --onSuccess \"nodemon -e .js,.hbs,.css --watch ./dist/server/src/ --watch ./dist/shared/ --watch ./templates/ --inspect ./dist/server/src/index.js\"",
    "inline-css": "node ./templates/inline-css.js",
    "lint": "tslint -p ./tsconfig.json",
    "pg:destroy": "psql -U postgres -d foodweb -a -f database/destroy-db.sql",
    "pg:dump": "pg_dump -U postgres foodweb > database/dump.pgsql",
    "pg:restore": "npm run pg:destroy && psql -f database/dump.pgsql foodweb",
    "start": "tsc-watch -p ./src/tsconfig.app.json --onSuccess \"nodemon -e .js,.hbs,.css --watch ./dist/server/src/ --watch ./dist/shared/ --watch ./templates/ ./dist/server/src/index.js\"",
    "test": "npm run lint && ts-mocha -p ./src/tsconfig.spec.json ./src/**/*.ts",
    "test:watch": "ts-mocha -p ./src/tsconfig.spec.json ./src/**/*.ts",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli -f ormconfig.json",
    "typeorm:migration:create": "ts-node ./node_modules/typeorm/cli migration:create -n",
    "typeorm:migration:generate": "ts-node ./node_modules/typeorm/cli migration:generate -n",
    "typeorm:migration:revert": "ts-node ./node_modules/typeorm/cli migration:revert",
    "typeorm:migration:run": "ts-node ./node_modules/typeorm/cli migration:run"
  },
  "private": true,
  "dependencies": {
    "@types/express": "^4.16.1",
    "@types/express-session": "^1.15.12",
    "bcrypt": "^3.0.2",
    "body-parser": "^1.18.3",
    "connect-redis": "^3.4.0",
    "crypto": "^1.0.1",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-force-https": "^1.0.0",
    "express-session": "^1.15.6",
    "fs-extra": "^8.0.1",
    "handlebars": "^4.1.2",
    "handlebars-helpers": "^0.10.0",
    "juice": "^5.2.0",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "multer": "^1.4.1",
    "nodemailer": "^6.2.1",
    "nodemailer-mailgun-transport": "^1.4.0",
    "pg": "^7.7.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.3.3",
    "typeorm": "^0.2.16",
    "typescript": "^3.4.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/chai-http": "^3.0.5",
    "@types/connect-redis": "0.0.8",
    "@types/expect": "^1.20.3",
    "@types/fs-extra": "^7.0.0",
    "@types/lodash": "^4.14.118",
    "@types/mocha": "^5.2.5",
    "@types/moment-timezone": "^0.5.9",
    "@types/multer": "^1.3.7",
    "@types/node": "^10.12.12",
    "@types/node-schedule": "^1.2.2",
    "@types/nodemailer": "^6.2.0",
    "@types/pg": "^7.4.11",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "concurrently": "^4.1.0",
    "jasmine-core": "^3.3.0",
    "jasmine-spec-reporter": "^4.2.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.7",
    "opn-cli": "^3.1.0",
    "rimraf": "^2.6.2",
    "run-sequence": "^2.0.0",
    "ts-mocha": "^2.0.0",
    "ts-node": "^7.0.1",
    "tsc-watch": "^2.1.2",
    "tslint": "^5.11.0"
  },
  "engines": {
    "node": "10.14.1",
    "npm": "6.4.1"
  }
}
