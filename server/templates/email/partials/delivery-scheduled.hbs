{{#if isVolunteer }}
  <div>Thank-you for volunteering for the following delivery:</div>
  <p class="donation-description">{{ donation.description }}</p>
  <hr>

  <div class="col-6">
    <div class="inline-label">
      Donor:
    </div>
    <div class="indented-data">
      <div class="emphasize">
        {{ donorName }}
      </div>
      <div>{{ donation.donorContactOverride.streetAddress }}</div>
      <div>
        {{ donation.donorContactOverride.city }}, {{ donation.donorContactOverride.state }}
        {{ donation.donorContactOverride.postalCode }}
      </div>
    </div>
  </div>

  <div class="col-6">
    <div class="inline-label">
      Receiver:
    </div>
    <div class="indented-data">
      <div class="emphasize">
        {{ receiverName }}
      </div>
      <div>{{ donation.claim.receiverAccount.contactInfo.streetAddress }}</div>
      <div>
        {{ donation.claim.receiverAccount.contactInfo.city }}, {{ donation.claim.receiverAccount.contactInfo.state }}
        {{ donation.claim.receiverAccount.contactInfo.postalCode }}
      </div>
    </div>
  </div>

  <hr class="no-margin-top">

  <div class="col-6">
    <div class="inline-label">
      Pickup Window Start:
    </div>
    <div class="indented-data date-time">
      <span class="date">{{toLocalDateStr donation.delivery.pickupWindowStart timezone }}</span>
      <strong class="time">{{toLocalTimeStr donation.delivery.pickupWindowStart timezone }}</strong>
    </div>
  </div>

  <div class="col-6">
    <div class="inline-label">
      Pickup Window End:
    </div>
    <div class="indented-data date-time">
      <span class="date">{{toLocalDateStr donation.delivery.pickupWindowEnd timezone }}</span>
      <strong class="time">{{toLocalTimeStr donation.delivery.pickupWindowEnd timezone }}</strong>
    </div>
  </div>

  <hr class="no-margin-top">
  <p>
    You can view the delivery and donation details at this
    <a href="{{ env.SERVER_HOST_ADDRESS }}/donation/details/{{ donation.id }}">link</a>.
  </p>
  <p>
    Feel free to contact
    <a href="mailto:{{ donation.donorContactOverride.email }}">{{ donorName }}</a>,
    <a href="mailto:{{ donation.claim.receiverAccount.contactInfo.email }}">{{ receiverName }}</a>,
    or <a href="mailto:{{ env.SUPPORT_EMAIL }}">FoodWeb</a> with any questions.
  </p>
{{else if isReceiver }}
  <div>
    The following donation that you claimed from <strong>{{ donorName }}</strong>
    has been scheduled for delivery by <strong>{{ delivererName }}</strong>:
  </div>
  <p class="donation-description">{{ donation.description }}</p>
  <hr>

  <div class="col-6">
    <div class="inline-label">
      Pickup Window Start:
    </div>
    <div class="indented-data date-time">
      <span class="date">{{toLocalDateStr donation.delivery.pickupWindowStart timezone }}</span>
      <strong class="time">{{toLocalTimeStr donation.delivery.pickupWindowStart timezone }}</strong>
    </div>
  </div>

  <div class="col-6">
    <div class="inline-label">
      Pickup Window End:
    </div>
    <div class="indented-data date-time">
      <span class="date">{{toLocalDateStr donation.delivery.pickupWindowEnd timezone }}</span>
      <strong class="time">{{toLocalTimeStr donation.delivery.pickupWindowEnd timezone }}</strong>
    </div>
  </div>

  <hr class="no-margin-top">
  <p>
    You can view the donation and delivery details at this
    <a href="{{ env.SERVER_HOST_ADDRESS }}/donation/details/{{ donation.id }}">link</a>.
  </p>
  <p>
    Feel free to contact
    <a href="mailto:{{ donation.delivery.volunteerAccount.contactInfo.email }}">{{ delivererName }}</a>,
    <a href="mailto:{{ donation.donorContactOverride.email }}">{{ donorName }}</a>,
    or <a href="mailto:{{ env.SUPPORT_EMAIL }}">FoodWeb</a> with any questions.
  </p>
{{else}}
  <div>
    The following donation that you submitted has been scheduled for delivery by <strong>{{ delivererName }}</strong>:
  </div>
  <p class="donation-description">{{ donation.description }}</p>
  <hr>

  <div class="col-6">
    <div class="inline-label">
