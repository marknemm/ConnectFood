<header style="margin-bottom: 10px;">
  <table border="0" cellpadding="0" cellspacing="0" style="width: 100%">
    <tr>
      <td align="left">
        {{#if isVolunteer }}
          <b>Hi, {{ account.volunteer.firstName }} {{ account.volunteer.lastName }}</b>
        {{else}}
          <b>Hi, {{ account.organization.organizationName }}</b>
        {{/if}}
      </td>
      <td align="right">
        <a href="{{ env.SERVER_HOST_ADDRESS }}">Home</a> |
        <a href="{{ env.SERVER_HOST_ADDRESS }}/login">Login</a>
      </td>
    </tr>
  </table>
  <img
    width="561px" style="margin-top: 5px; max-width: 100%;"
    src="{{ env.PRODUCTION_HOST_ADDRESS }}/assets/HeaderImgMd.jpg"
    alt="Food Web Header"
  >
</header>
