{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "~admin/*": ["./src/*"],
      "~entity": ["../web/src/database/entity/index"],
      "~orm": ["../web/src/database/orm/index"],
      "~shared": ["../../../shared/src/admin/index"],
      "~web/*": ["../web/src/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*",
    "../web/src/**/*",
    "../../database/src/**/*",
    "../../../shared/src/**/*"
  ]
}
